// Various functions

experimental(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -ms-{prop} args
  -o-{prop} args
  {prop} args

font-feature-settings()
  experimental('font-feature-settings', arguments)

// General page layout

body
  margin 1em

html
  font 16px Ubuntu, sans-serif
  color #556
  background #eee
  background-image url('/bg.png')
  text-rendering optimizeLegibility
  font-feature-settings "liga=1"
  font-feature-settings "kern=1"
  font-feature-settings "frac=1"

// Main classes

.active
  border-color #000
  background #fff
  experimental(transform, translateX(10px))
  color #223
  box-shadow 0 0 5px #bbb

[contenteditable=true]
  border-color red !important
  box-shadow 0 0 5px red

.compact
  max-height 8em
  overflow hidden
  border-bottom 1px solid white
  border-top 1px solid #ccc
  font-size 10px
  box-shadow inset 0 0 5px #ccc
  *
    font-size inherit !important

// Multi-element styles

section, p, ul, ol, blockquote, pre, h1, h2, h3, h4, h5, h6, li, hr
  transition -webkit-transform .3s, border-color .3s, background .3s, font-size .3s
  transition transform .3s, border-color .3s, background .3s, font-size .3s

section, p, ul, ol, blockquote, pre, h1, h2, h3, h4, h5, h6
  margin .4em 0
  padding .1em
  min-height 1.2em

p, ul, ol, blockquote, pre
  padding .5em
  min-height 1.5em

p, ul, ol, blockquote
  max-width 40em
  line-height 1.5em

// Special element styles

code, pre
  font-family "Ubuntu Mono", courier;

h1, h2, h3, h4, h5, h6, .fancy
  font-family Dosis, sans-serif
  font-weight normal

h1, .fancy
  color #f07c39 !important

h1
  font-size 5em

h2
  font-size 3em
  color #efbb4b !important

h3
  font-size 2.5em
  color #00a538 !important

h4
  font-size 2em
  color #0062c5 !important

h5
  font-size 1.5em
  color #b400c5 !important

h6
  font-size 1.3em
  color #a50003 !important

section
  padding-left .8em
  border-left 5px solid #ccc

hr
  border 2.5px solid #ccc
  margin 0

em
  font-style inherit
  font-weight bold

a
  color #0098c4

table
  margin .5em

blockquote 
  font-style italic
  &:after
    content ' ❞'
  &:before
    content '❝ '

ol, ul
  padding-left 2em


// Todo classes

.todo
  color #924332
  &:before
    content 'TODO: '

.cancelled
  color #c1c167
  &:before
    content 'CANCELLED: '

.done
  color #74a44f
  &:before
    content 'DONE: '

.working
  color #e43847
  &:before
    content 'WORKING ON: '

.todo:before, .cancelled:before, .done:before, .working:before
  font-weight: bold;

